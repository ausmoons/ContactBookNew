<template>
  <div class="add container">
    <Alert v-if="alert" v-bind:message="alert" />
    <h1 class="page-header">Add Contact</h1>
    <form v-on:submit="addContact">
        <div class="well">
            <h4>Contact Info</h4>
            <div class="form-group">
                <label>First Name</label>
                <input type="text" class="form-control" placeholder="name1" v-model="contact.name1">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" class="form-control" placeholder="surname1" v-model="contact.surname1">
            </div>
        </div>
        <div class="well">
            <h4>contact Contact</h4>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" placeholder="emailAddress" v-model="emails.emailAddress">
            </div>
            <div class="form-group">
                <label>Email type</label>
                <input type="text" class="form-control" placeholder="emailType" v-model="contact.emails.type">
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="text" class="form-control" placeholder="phoneNumbers" v-model="contact.phoneNumbers">
            </div>
        </div>

        <div class="well">
            <h4>contact Location</h4>
            <div class="form-group">
                <label>City</label>
                <input type="text" class="form-control" placeholder="city" v-model="contact.addresses.city">
            </div>
            <div class="form-group">
                <label>Street</label>
                <input type="text" class="form-control" placeholder="street" v-model="contact.addresses.street">
            </div>
            <div class="form-group">
                <label>House number</label>
                <input type="text" class="form-control" placeholder="houseNUmber" v-model="contact.addresses.houseNumber">
            </div>
            <div class="form-group">
                <label>Postal code</label>
                <input type="text" class="form-control" placeholder="postalCode" v-model="contact.addresses.postalCode">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</template>

<script>
    import Alert from './Alert'
    export default {
    name: 'add',
    data () {
        return {
        contact: [{
            name1: '',
            surname1: '',
            phone: '',
            addresses: {
                city : '',
                street: '',
                houseNumber: '',
                postalCode: '',
                }, 
            phoneNumbers: [{
                phoneNumber: '',
                type: '',
                 }], 

            emails: [{
                emailAddress:'',
                type: '',
                }], 
        }],
        alert:''
        }
    },
    methods: {
        addContact(e){
            if(!this.contact.name1 || !this.contact.surname1){
                this.alert = 'Please fill in all required fields';
            } else {
                let newContact = {
                    name1: this.contact.name1,
                    surname1: this.contact.surname1,
                    phone: this.contact.phoneNumbers.phoneNumber,
                    addresses: {
                        city : this.contact.addresses.city,
                        street: this.contact.addresses.street,
                        houseNumber: this.contact.addresses.houseNumber,
                        postalCode: this.contact.addresses.postalCode,
                      }, 
                    phoneNumbers: [{
                        phoneNumber: this.phoneNumbers.phoneNumber,
                        type: this.phoneNumbers.type,
                      }], 
                     /**  emails[0]: this.emails.emailAddress,
                      emails[1]:this.emails.type, */

                     emails: [{
                        emailAddress: this.contact.emails.map((email) => { email.emailAddress }),
                        type: this.contact.emails.map((email) => { email.type}),
                      }], 

                }

                this.$http.post('http://localhost:44366/api/Contact', newContact)
                    .then(function(response){
                        this.$router.push({path: '/', query: {alert: 'Contact Added'}});
                    });

                e.preventDefault();
            }
            e.preventDefault();
        }
    },
    components: {
        Alert
    }
    }
</script>

<!-- Add "scoped" attribute to limit CSS to this component only -->
